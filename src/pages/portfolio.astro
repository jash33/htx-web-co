<style>
  /* =================================================================
   * PORTFOLIO HERO SECTION - Matching Services Page Style
   * ================================================================= */

  .portfolio-hero {
    position: relative;
    padding: var(--spacing-16) var(--spacing-4) var(--spacing-20);
    background: linear-gradient(
      135deg,
      var(--color-background) 0%,
      var(--color-primary-50) 50%,
      var(--color-background) 100%
    );
    background-size: 200% 200%;
    animation: gradientShift 15s ease infinite;
    overflow: hidden;
  }

  .portfolio-hero__container {
    max-width: var(--container-7xl);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-10);
    align-items: center;
  }

  .portfolio-hero__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--spacing-5);
  }

  .portfolio-hero__badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-2) var(--spacing-4);
    background-color: var(--color-success-50);
    border: 1px solid var(--color-success-200);
    border-radius: var(--radius-full);
    color: var(--color-success-700);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }

  .portfolio-hero__badge svg {
    color: var(--color-success-600);
  }

  .portfolio-hero__title {
    font-family: var(--font-heading);
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    line-height: var(--line-height-tight);
    margin: 0;
  }

  .portfolio-hero__title-highlight {
    color: var(--color-primary);
    display: block;
  }

  .portfolio-hero__description {
    font-family: var(--font-body);
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    max-width: 50ch;
    margin: 0;
  }

  .portfolio-hero__cta-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
    width: 100%;
    max-width: 20rem;
  }

  .portfolio-hero__stats {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: var(--spacing-4);
    padding: var(--spacing-4) var(--spacing-6);
    background-color: var(--color-background-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
    margin-top: var(--spacing-2);
  }

  .portfolio-hero__stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-1);
  }

  .portfolio-hero__stat-value {
    font-family: var(--font-heading);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
  }

  .portfolio-hero__stat-label {
    font-family: var(--font-body);
    font-size: var(--font-size-xs);
    color: var(--color-text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .portfolio-hero__stat-divider {
    width: 1px;
    height: var(--spacing-8);
    background-color: var(--color-border);
  }

  /* Visual/Cards Preview */
  .portfolio-hero__visual {
    display: none;
  }

  .portfolio-hero__cards-preview {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
    padding: var(--spacing-6);
    background: var(--color-background-elevated);
    border-radius: var(--radius-2xl);
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-xl);
    transform: perspective(1000px) rotateY(-5deg) rotateX(2deg);
  }

  .portfolio-hero__preview-card {
    display: flex;
    align-items: center;
    gap: var(--spacing-4);
    padding: var(--spacing-4);
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: transform var(--duration-200) var(--ease-out),
                box-shadow var(--duration-200) var(--ease-out);
  }

  .portfolio-hero__preview-card:hover {
    transform: translateX(4px);
    box-shadow: var(--shadow-md);
  }

  .portfolio-hero__preview-card--1 .portfolio-hero__preview-icon {
    background-color: var(--color-primary-100);
    color: var(--color-primary-600);
  }

  .portfolio-hero__preview-card--2 .portfolio-hero__preview-icon {
    background-color: var(--color-success-100);
    color: var(--color-success-600);
  }

  .portfolio-hero__preview-card--3 .portfolio-hero__preview-icon {
    background-color: var(--color-warning-100);
    color: var(--color-warning-600);
  }

  .portfolio-hero__preview-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--spacing-12);
    height: var(--spacing-12);
    border-radius: var(--radius-lg);
    flex-shrink: 0;
  }

  .portfolio-hero__preview-label {
    font-family: var(--font-heading);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    flex: 1;
  }

