---
/**
 * ServiceCard Component
 * A card component for displaying a single service offering with icon,
 * title, description, and optional call-to-action.
 *
 * Features:
 * - Icon/visual element display
 * - Clear service title
 * - Brief description (2-3 sentences)
 * - Optional 'Learn More' CTA link/button
 * - Hover animations for enhanced interactivity
 * - Accessible with proper heading hierarchy
 * - Touch-friendly target sizes on mobile
 *
 * @example Basic usage
 * ```astro
 * <ServiceCard
 *   id="web-design"
 *   title="Website Design"
 *   description="Custom, responsive websites tailored to your business."
 * />
 * ```
 *
 * @example With icon and CTA
 * ```astro
 * <ServiceCard
 *   id="web-design"
 *   title="Website Design"
 *   description="Custom, responsive websites tailored to your business."
 *   icon="<svg>...</svg>"
 *   cta={{ text: 'Learn More', href: '/services/web-design' }}
 * />
 * ```
 */

import type { ServiceCardProps } from '../types/service';
import Button from './Button.astro';

interface Props extends ServiceCardProps {}

const {
  id,
  title,
  description,
  icon,
  cta,
  class: className = '',
} = Astro.props;

// Build CSS classes
const cardClasses = [
  'service-card',
  className,
].filter(Boolean).join(' ');
---

<article class={cardClasses} id={`service-${id}`}>
  {icon && (
    <div class="service-card__icon" aria-hidden="true">
      <Fragment set:html={icon} />
    </div>
  )}

  <div class="service-card__content">
    <h3 class="service-card__title">{title}</h3>
    <p class="service-card__description">{description}</p>
  </div>

  {cta && (
    <div class="service-card__footer">
      <Button
        text={cta.text}
        href={cta.href}
        variant="secondary"
        size="small"
        openInNewTab={cta.openInNewTab}
        class="service-card__cta"
      />
    </div>
  )}
</article>

<style>
  /* =================================================================
   * SERVICE CARD COMPONENT STYLES
   * =================================================================
   * Uses design system variables from variables.css
   * Follows BEM naming convention for maintainability
   */

  .service-card {
    /* Layout */
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);

    /* Box model */
    padding: var(--spacing-6);

    /* Positioning for pseudo-elements */
    position: relative;

    /* Visual */
    background-color: var(--color-background-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);

    /* Overflow for shine effect */
    overflow: hidden;

    /* Animation */
    transition:
      box-shadow var(--duration-300) var(--ease-out),
      transform var(--duration-300) var(--ease-out),
      border-color var(--duration-300) var(--ease-out);
  }

  /* Gradient border glow effect - appears on hover */
  .service-card::before {
    content: '';
    position: absolute;
    inset: -2px;
    background: linear-gradient(
      135deg,
      var(--color-primary-400) 0%,
      var(--color-accent) 50%,
      var(--color-accent-alt) 100%
    );
    border-radius: calc(var(--radius-xl) + 2px);
    opacity: 0;
    z-index: -1;
    filter: blur(8px);
    transition: opacity var(--duration-300) var(--ease-out);
  }

  /* Shine sweep effect */
  .service-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 60%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.08) 50%,
      transparent 100%
    );
    transform: skewX(-20deg);
    transition: left var(--duration-700) var(--ease-out);
    pointer-events: none;
    z-index: 1;
  }

  .service-card:hover {
    box-shadow: var(--shadow-lg), var(--glow-card-hover);
    transform: translateY(-6px);
    border-color: var(--color-primary-300);
  }

  .service-card:hover::before {
    opacity: 0.35;
  }

  .service-card:hover::after {
    left: 150%;
  }

  /* Icon Container */
  .service-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--spacing-14);
    height: var(--spacing-14);
    background: linear-gradient(
      135deg,
      var(--color-primary-50) 0%,
      var(--color-primary-100) 100%
    );
    border-radius: var(--radius-lg);
    color: var(--color-primary);
    position: relative;
    transition:
      background var(--duration-300) var(--ease-out),
      transform var(--duration-300) var(--ease-spring-soft),
      box-shadow var(--duration-300) var(--ease-out);
  }

  .service-card:hover .service-card__icon {
    background: linear-gradient(
      135deg,
      var(--color-primary-100) 0%,
      var(--color-primary-200) 100%
    );
    transform: scale(1.08) rotate(3deg);
    box-shadow: var(--glow-primary-sm);
  }

  .service-card__icon :global(svg) {
    width: var(--spacing-7);
    height: var(--spacing-7);
    transition: transform var(--duration-300) var(--ease-spring-soft);
  }

  .service-card:hover .service-card__icon :global(svg) {
    transform: scale(1.05);
  }

  /* Content Area */
  .service-card__content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
    flex: 1;
  }

  .service-card__title {
    font-family: var(--font-heading);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin: 0;
    line-height: var(--line-height-tight);
    transition: color var(--duration-200) var(--ease-out);
  }

  .service-card:hover .service-card__title {
    color: var(--color-primary);
  }

  .service-card__description {
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin: 0;
    transition: color var(--duration-200) var(--ease-out);
  }

  .service-card:hover .service-card__description {
    color: var(--color-text-primary);
  }

  /* Footer with CTA */
  .service-card__footer {
    margin-top: auto;
    padding-top: var(--spacing-4);
  }

  /* =================================================================
   * RESPONSIVE STYLES
   * =================================================================
   */

  /* Tablet and up (768px) */
  @media screen and (min-width: 768px) {
    .service-card {
      padding: var(--spacing-8);
      gap: var(--spacing-5);
    }

    .service-card__icon {
      width: var(--spacing-16);
      height: var(--spacing-16);
    }

    .service-card__icon :global(svg) {
      width: var(--spacing-8);
      height: var(--spacing-8);
    }

    .service-card__title {
      font-size: var(--font-size-2xl);
    }
  }

  /* =================================================================
   * REDUCED MOTION
   * Respect user preferences for reduced motion
   * =================================================================
   */
  @media (prefers-reduced-motion: reduce) {
    .service-card,
    .service-card__icon,
    .service-card__title,
    .service-card__description,
    .service-card__icon :global(svg) {
      transition: none;
    }

    .service-card::before,
    .service-card::after {
      display: none;
    }

    .service-card:hover {
      transform: none;
      /* Keep subtle visual feedback without motion */
      box-shadow: var(--shadow-lg);
    }

    .service-card:hover .service-card__icon {
      transform: none;
      box-shadow: none;
    }

    .service-card:hover .service-card__icon :global(svg) {
      transform: none;
    }
  }

  /* =================================================================
   * PRINT STYLES
   * =================================================================
   */
  @media print {
    .service-card {
      box-shadow: none;
      border: 1px solid var(--color-border);
      break-inside: avoid;
      page-break-inside: avoid;
    }

    .service-card:hover {
      transform: none;
      box-shadow: none;
    }

    .service-card__footer {
      display: none;
    }
  }
</style>
