  <div class="hero__container">
    <div class="hero__grid">
      <div class="hero__content">
        <h1 id={`${id}-headline`} class="hero__headline">{headline}</h1>

        {valueProposition && (
          <p class="hero__value-prop">{valueProposition}</p>
        )}

        {subheadline && (
          <p class="hero__subheadline">
