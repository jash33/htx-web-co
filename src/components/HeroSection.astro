/**
 * Hero Section Component
 * A conversion-optimized hero section for the homepage that immediately
 * communicates value to small business owners in Houston.
 *
 * Features:
 * - Mobile-first responsive design
 * - Clear visual hierarchy: headline → value prop → subheadline → CTA
 * - WCAG 2.1 AA compliant contrast and touch targets
 * - Semantic HTML structure for accessibility and SEO
 * - Smooth responsive scaling without horizontal scroll
 * - Optional secondary CTA button
 * - Animated grid background with moving glow effect
 * - Floating gradient orbs background animation
 *
 * Background Animation:
 * The hero features two layered background animations:
 *
 * 1. Animated Grid:
 *    - Subtle grid lines that slowly move diagonally
 *    - A glowing highlight that travels across the grid
 *    - Responsive grid sizing (50px mobile → 80px desktop)
 *    - Creates a modern tech/digital aesthetic
 *
 * 2. Floating Gradient Orbs:
 *    - 5 large, soft, blurred gradient circles in purple/blue/cyan tones
 *    - Each orb has a unique slow floating path for organic movement
 *    - Orbs scale up on larger screens for a richer visual experience
 *    - GPU-accelerated transforms for smooth 60fps performance
 *
 * Accessibility:
 * - Animation respects `prefers-reduced-motion` (static fallback)
 * - Hidden in Windows High Contrast mode (`forced-colors: active`)
 * - Hidden when printing
 * - All animation elements marked `aria-hidden="true"`
 *
 * @example Basic usage
 * ```astro
 * <HeroSection
 *   headline="Grow Your Houston Area Small Business Online"
 *   valueProposition="Expert web solutions for local small businesses"
 *   subheadline="Custom websites, SEO, and digital marketing designed specifically for businesses in Houston."
 *   primaryCTA={{ text: "Get Your Free Consultation", href: "/contact" }}
 * />
 * ```
 */

import type { HeroSectionProps } from '../types/hero';
import Button from './Button.astro';

interface Props extends HeroSectionProps {
  trustBadges?: Array<{ icon: 'experience' | 'projects' | 'tech'; text: string; }>;
}

const {
  headline,
  valueProposition,
  subheadline,
  primaryCTA,
  secondaryCTA,
  id = 'hero',
  class: className = '',
  trustBadges = [
    { icon: 'experience', text: '10+ Years Experience' },
    { icon: 'projects', text: '50+ Local Businesses Helped' },
    { icon: 'tech', text: 'Fast & Search-Friendly Sites' },
  ],
} = Astro.props;

const sectionClasses = ['hero', className].filter(Boolean).join(' ');

const trustIcons: Record<string, string> = {
  experience: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="14" height="14"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>`,
  projects: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="14" height="14"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/></svg>`,
  tech: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="14" height="14"><path d="M9.4 16.6L4.8 12l4.6-4.6L8 6l-6 6 6 6 1.4-1.4zm5.2 0l4.6-4.6-4.6-4.6L16 6l6 6-6 6-1.4-1.4z"/></svg>`,
};
---

