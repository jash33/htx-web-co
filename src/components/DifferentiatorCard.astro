---
/**
 * DifferentiatorCard Component
 * A card component for displaying a single unique selling point/differentiator
 * with icon, title, and concise description.
 *
 * Features:
 * - Icon/visual element display with accent background
 * - Clear title for the differentiator
 * - Brief first-person description (1-2 sentences)
 * - Hover animations for enhanced interactivity
 * - Accessible with proper heading hierarchy
 * - Touch-friendly target sizes on mobile
 *
 * @example Basic usage
 * ```astro
 * <DifferentiatorCard
 *   id="local-expertise"
 *   title="Local Expertise"
 *   description="I live and work in  Houston, so I understand the local market."
 * />
 * ```
 *
 * @example With icon
 * ```astro
 * <DifferentiatorCard
 *   id="transparent-pricing"
 *   title="Transparent Pricing"
 *   description="You'll know exactly what you're paying for - no hidden fees or surprises."
 *   icon="<svg>...</svg>"
 * />
 * ```
 */

import type { DifferentiatorCardProps } from '../types/differentiator';

interface Props extends DifferentiatorCardProps {}

const {
  id,
  title,
  description,
  icon,
  class: className = '',
} = Astro.props;

// Build CSS classes
const cardClasses = [
  'differentiator-card',
  className,
].filter(Boolean).join(' ');
---

<article class={cardClasses} id={`differentiator-${id}`}>
  {icon && (
    <div class="differentiator-card__icon" aria-hidden="true">
      <Fragment set:html={icon} />
    </div>
  )}

  <div class="differentiator-card__content">
    <h3 class="differentiator-card__title">{title}</h3>
    <p class="differentiator-card__description">{description}</p>
  </div>
</article>

<style>
  /* =================================================================
   * DIFFERENTIATOR CARD COMPONENT STYLES
   * =================================================================
   * Uses design system variables from variables.css
   * Follows BEM naming convention for maintainability
   */

  .differentiator-card {
    /* Layout */
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--spacing-4);

    /* Box model */
    padding: var(--spacing-6);

    /* Positioning for pseudo-elements */
    position: relative;

    /* Visual */
    background-color: var(--color-background-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);

    /* Overflow for shine effect */
    overflow: hidden;

    /* Animation */
    transition:
      box-shadow var(--duration-300) var(--ease-out),
      transform var(--duration-300) var(--ease-out),
      border-color var(--duration-300) var(--ease-out);
  }

  /* Shine sweep effect - diagonal sweep across card on hover */
  .differentiator-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 60%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.1) 50%,
      transparent 100%
    );
    transform: skewX(-20deg);
    transition: left var(--duration-700) var(--ease-out);
    pointer-events: none;
    z-index: 1;
  }

  .differentiator-card:hover {
    box-shadow: var(--shadow-lg), var(--glow-card-hover);
    transform: translateY(-6px);
    border-color: var(--color-primary-300);
  }

  .differentiator-card:hover::after {
    left: 150%;
  }

  /* Icon Container */
  .differentiator-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--spacing-16);
    height: var(--spacing-16);
    background: linear-gradient(
      135deg,
      var(--color-primary-50) 0%,
      var(--color-primary-100) 100%
    );
    border-radius: var(--radius-full);
    color: var(--color-primary);
    position: relative;
    z-index: 2;
    transition:
      background var(--duration-300) var(--ease-out),
      transform var(--duration-300) var(--ease-spring-soft),
      box-shadow var(--duration-300) var(--ease-out);
  }

  /* Pulse ring effect - animated ring that expands outward */
  .differentiator-card__icon::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: var(--radius-full);
    background: transparent;
    border: 2px solid var(--color-primary-300);
    opacity: 0;
    transform: scale(1);
    transition:
      opacity var(--duration-300) var(--ease-out),
      transform var(--duration-500) var(--ease-out);
  }

  .differentiator-card:hover .differentiator-card__icon {
    background: linear-gradient(
      135deg,
      var(--color-primary-100) 0%,
      var(--color-primary-200) 100%
    );
    transform: scale(1.1);
    box-shadow: var(--glow-primary-sm);
  }

  .differentiator-card:hover .differentiator-card__icon::before {
    opacity: 0;
    transform: scale(1.5);
    animation: icon-pulse 1.2s var(--ease-out) infinite;
  }

  /* Icon pulse keyframes */
  @keyframes icon-pulse {
    0% {
      opacity: 0.6;
      transform: scale(1);
    }
    100% {
      opacity: 0;
      transform: scale(1.6);
    }
  }

  .differentiator-card__icon :global(svg) {
    width: var(--spacing-8);
    height: var(--spacing-8);
    transition: transform var(--duration-300) var(--ease-spring-soft);
  }

  .differentiator-card:hover .differentiator-card__icon :global(svg) {
    transform: scale(1.1);
  }

  /* Content Area */
  .differentiator-card__content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
    flex: 1;
    position: relative;
    z-index: 2;
  }

  .differentiator-card__title {
    font-family: var(--font-heading);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin: 0;
    line-height: var(--line-height-tight);
    transition: color var(--duration-200) var(--ease-out);
  }

  .differentiator-card:hover .differentiator-card__title {
    color: var(--color-primary);
  }

  .differentiator-card__description {
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin: 0;
    transition: color var(--duration-200) var(--ease-out);
  }

  .differentiator-card:hover .differentiator-card__description {
    color: var(--color-text-primary);
  }

  /* =================================================================
   * RESPONSIVE STYLES
   * =================================================================
   */

  /* Tablet and up (768px) */
  @media screen and (min-width: 768px) {
    .differentiator-card {
      padding: var(--spacing-8);
      gap: var(--spacing-5);
    }

    .differentiator-card__icon {
      width: var(--spacing-20);
      height: var(--spacing-20);
    }

    .differentiator-card__icon :global(svg) {
      width: var(--spacing-10);
      height: var(--spacing-10);
    }

    .differentiator-card__title {
      font-size: var(--font-size-xl);
    }
  }

  /* =================================================================
   * REDUCED MOTION
   * Respect user preferences for reduced motion
   * =================================================================
   */
  @media (prefers-reduced-motion: reduce) {
    .differentiator-card,
    .differentiator-card__icon,
    .differentiator-card__title,
    .differentiator-card__description,
    .differentiator-card__icon :global(svg) {
      transition: none;
    }

    .differentiator-card::after {
      display: none;
    }

    .differentiator-card:hover {
      transform: none;
      /* Keep subtle visual feedback without motion */
      box-shadow: var(--shadow-lg);
    }

    .differentiator-card:hover .differentiator-card__icon {
      transform: none;
      box-shadow: none;
    }

    .differentiator-card:hover .differentiator-card__icon::before {
      animation: none;
      display: none;
    }

    .differentiator-card:hover .differentiator-card__icon :global(svg) {
      transform: none;
    }
  }

  /* =================================================================
   * HIGH CONTRAST MODE
   * Windows High Contrast support
   * =================================================================
   */
  @media (forced-colors: active) {
    .differentiator-card {
      border: 2px solid CanvasText;
    }

    .differentiator-card__icon {
      border: 1px solid CanvasText;
    }
  }

  /* =================================================================
   * PRINT STYLES
   * =================================================================
   */
  @media print {
    .differentiator-card {
      box-shadow: none;
      border: 1px solid var(--color-border);
      break-inside: avoid;
      page-break-inside: avoid;
    }

    .differentiator-card:hover {
      transform: none;
      box-shadow: none;
    }
  }
</style>
